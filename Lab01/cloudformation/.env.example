# CloudFormation Configuration
# Copy this file to .env and fill in your values

# Stack naming
STACK_NAME_PREFIX=nt548

# Project name for resource tagging
PROJECT_NAME=cf-project

# Your IP address for SSH access (add /32 at the end)
# Get your IP: Google "my ip" then add /32
MY_IP=1.2.3.4/32

# Your AWS Key Pair name (the .pem file name without extension)
MY_KEY=your-key-pair-name

# S3 bucket name for nested stack templates
# Must be globally unique and only lowercase letters, numbers, and hyphens
S3_BUCKET_NAME=your-unique-bucket-name-cf-templates

# AWS Region (optional, defaults to us-east-1)
AWS_REGION=us-east-1
